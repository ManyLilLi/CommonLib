<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:padding="1dp">

    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />


    <View
        android:id="@+id/view_click_cover"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="right" />

    <View
        android:id="@+id/cover_select_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black_55"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_select_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_margin="7dp"
        android:background="@drawable/selector_image_select_num"
        android:gravity="center"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="12sp" />
</FrameLayout>